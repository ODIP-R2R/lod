		api:name "scheme";
		api:value "{base}/vocab/{vocabulary}";
		api:type rdfs:Resource;
	] ;
	api:selector [
		api:where "?scheme skos:hasTopConcept ?item. ?item skos:prefLabel ?label.";
		api:orderBy "?label";
	] ;
	.

